<Window x:Class="Reports.Windows.HistorialReservasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wf="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        xmlns:cr="clr-namespace:CrystalDecisions.Windows.Forms;assembly=CrystalDecisions.Windows.Forms"
        mc:Ignorable="d"
        Title="Historial de Reservas" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Grid>
        <wf:WindowsFormsHost>
            <cr:CrystalReportViewer x:Name="crystalReportViewer" 
                                     DisplayGroupTree="True"
                                     ShowRefreshButton="False"
                                     ShowCloseButton="False"
                                     ShowGroupTreeButton="True"
                                     ShowExportButton="True"
                                     ShowPrintButton="True"/>
        </wf:WindowsFormsHost>
    </Grid>
</Window>
