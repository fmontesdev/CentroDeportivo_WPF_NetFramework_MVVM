<UserControl x:Class="CentroDeportivo.Views.ReservasView"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:CentroDeportivo.Views"
         xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
         mc:Ignorable="d" 
         d:DesignHeight="600" d:DesignWidth="660">

<UserControl.Resources>
        <!-- Converter nativo para bool a visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    
        <!-- Estilo para el Border -->
        <Style x:Key="Border" TargetType="Border">
            <Setter Property="Background" Value="#FFE7EFF6"/>
            <Setter Property="CornerRadius" Value="11"/>
            <Setter Property="Padding" Value="16,11,16,14"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para el título de sección -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#7A7A7A"/>
            <Setter Property="Margin" Value="2,0,0,8"/>
        </Style>

        <!-- Estilo para el icono del campo -->
        <Style x:Key="FieldIcon" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1E3A52"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para label de campo no editable -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#7A7A7A"/>
            <Setter Property="Margin" Value="2,0,0,4"/>
        </Style>

        <!-- Estilo para campo no editable -->
        <Style x:Key="ReadOnlyField" TargetType="TextBlock">
            <Setter Property="Background" Value="#1E3A52"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para el placeholder del TextBox -->
        <Style x:Key="PlaceholderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="9,5,0,0"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>

        <!-- Estilo para el TextBox -->
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para el DatePicker -->
        <Style x:Key="InputDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para el total -->
        <Style x:Key="TotalLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF3D3D3D"/>
        </Style>

        <!-- Estilo para el botón de acción -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="baseBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}"/>
                            <Border x:Name="overlayBorder"
                                    Background="Transparent"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                TextBlock.Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.07"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.14"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para las celdas del DataGrid -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFC4DCF4"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para las filas del DataGrid -->
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="24"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFC4DCF4"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F3F3F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <StackPanel Orientation="Vertical">

            <!-- BORDER: Datos de la Reserva -->
            <Border Style="{StaticResource Border}"
                    Padding="16,11,16,13"
                    Margin="0,0,0,12">

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Datos de la Reserva" 
                               Style="{StaticResource SectionTitle}"/>

                    <!-- Socio y Actividad (no editables) -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Socio -->
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="👤"
                                       Grid.Column="0"
                                       Style="{StaticResource FieldIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBlock x:Name="txtCliente"
                                       Grid.Column="1"
                                       Text="{Binding SocioNombre}"
                                       Style="{StaticResource ReadOnlyField}"/>
                        </Grid>

                        <!-- Actividad -->
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🏃"
                                       Grid.Column="0"
                                       Style="{StaticResource FieldIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBlock x:Name="txtActividad"
                                       Grid.Column="1"
                                       Text="{Binding ActividadNombre}"
                                       Style="{StaticResource ReadOnlyField}"/>
                        </Grid>
                    </Grid>

                    <!-- Fecha de Reserva (editable) -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="📅"
                                   Grid.Column="0"
                                   Style="{StaticResource FieldIcon}"
                                   FontSize="16"
                                   Margin="0,0,8,0"/>
                        <DatePicker x:Name="dpFechaReserva"
                                    SelectedDate="{Binding FechaReserva, UpdateSourceTrigger=PropertyChanged}"
                                    Grid.Column="1"
                                    Style="{StaticResource InputDatePicker}"
                                    Width="253"
                                    HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- Mensaje de Error (se muestra solo si HasError es true) -->
                    <Border Background="#FFFFE0E0" 
                            BorderBrush="#FFFF6B6B" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="8,6"
                            Margin="0,0,0,10"
                            Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="#FFD32F2F" 
                                   FontSize="12" 
                                   TextWrapping="Wrap"/>
                    </Border>

                    <!-- Botones de acción -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,5,0,2">
                        <Button Content="Nueva" 
                                Command="{Binding NuevaCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#6AAE6A"
                                Margin="0,0,10,0"/>

                        <Button Content="Editar" 
                                Command="{Binding EditarCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#FF5B9BD4"
                                Margin="0,0,10,0"/>

                        <Button Content="Cancelar" 
                                Command="{Binding CancelarCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#E56A5C"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- BORDER: Buscar por -->
            <Border Style="{StaticResource Border}"
                    Margin="0,0,0,12">

                <!-- Título sección -->
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Buscar por" 
                               Style="{StaticResource SectionTitle}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Socio -->
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="👤"
                                       Grid.Column="0"
                                       Style="{StaticResource FieldIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <Grid Grid.Column="1">
                                <TextBox x:Name="txtBuscarSocio"
                                         Text="{Binding BuscarSocio, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBox}"
                                         TextChanged="TextBox_TextChanged"/>
                                <TextBlock x:Name="placeholderBuscarSocio"
                                           Text="Buscar socio"
                                           Style="{StaticResource PlaceholderText}"/>
                            </Grid>
                        </Grid>

                        <!-- Actividad -->
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🏃"
                                       Grid.Column="0"
                                       Style="{StaticResource FieldIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <Grid Grid.Column="1">
                                <TextBox x:Name="txtBuscarActividad"
                                         Text="{Binding BuscarActividad, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBox}"
                                         TextChanged="TextBox_TextChanged"/>
                                <TextBlock x:Name="placeholderBuscarActividad"
                                           Text="Buscar actividad"
                                           Style="{StaticResource PlaceholderText}"/>
                            </Grid>
                        </Grid>

                        <!-- Botón Limpiar -->
                        <Button Grid.Column="4"
                                Content="Limpiar"
                                Command="{Binding LimpiarBusquedaCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#F5C469"
                                Width="70"
                                Height="30"
                                VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- BORDER: DataGrid -->
            <Border Style="{StaticResource Border}"
                    Padding="16,11,16,13">

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Lista de Reservas" 
                               Style="{StaticResource SectionTitle}"/>

                    <!-- DataGrid -->
                    <DataGrid x:Name="dgReservas"
                              ItemsSource="{Binding Reservas}"
                              SelectedItem="{Binding ReservaSeleccionada}"
                              AutoGenerateColumns="False"
                              Height="209"
                              IsReadOnly="True"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              Background="White"
                              BorderBrush="#FFC0D2E3"
                              BorderThickness="1"
                              RowStyle="{StaticResource DataGridRowStyle}"
                              CellStyle="{StaticResource DataGridCellStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdReserva}" Width="55"/>
                            <DataGridTextColumn Header="Socio" Binding="{Binding Socio.Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Actividad" Binding="{Binding Actividad.Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat='dd/MM/yyyy'}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Total -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Total de Reservas:" 
                                   Style="{StaticResource TotalLabel}"
                                   Margin="2,6,0,0"/>

                        <TextBlock x:Name="txtTotalReservas"
                                   Text="{Binding TotalReservas}" 
                                   Style="{StaticResource TotalLabel}"
                                   Margin="6,6,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>
