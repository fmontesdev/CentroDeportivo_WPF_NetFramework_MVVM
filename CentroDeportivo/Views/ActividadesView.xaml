<UserControl x:Class="CentroDeportivo.Views.ActividadesView"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:CentroDeportivo.Views"
         xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
         mc:Ignorable="d" 
         d:DesignHeight="600" d:DesignWidth="660">

<UserControl.Resources>
    <!-- Converter nativo para bool a visibility -->
    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
    <!-- Estilo para el Border -->
    <Style x:Key="Border" TargetType="Border">
        <Setter Property="Background" Value="#FFE7EFF6"/>
        <Setter Property="CornerRadius" Value="11"/>
        <Setter Property="Padding" Value="16,11,16,14"/>
        <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

        <!-- Estilo para el título de sección -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#7A7A7A"/>
            <Setter Property="Margin" Value="2,0,0,8"/>
        </Style>

        <!-- Estilo para los iconos de los TextBox -->
        <Style x:Key="TextBoxIcon" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1E3A52"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para el TextBox -->
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para el total -->
        <Style x:Key="TotalLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF3D3D3D"/>
        </Style>

        <!-- Estilo para el botón de acción -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="33"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Capa base con el color del botón -->
                            <Border x:Name="baseBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}"/>

                            <!-- Capa de overlay para efectos hover/pressed -->
                            <Border x:Name="overlayBorder"
                                    Background="Transparent"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                TextBlock.Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.07"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Presionado -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.14"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para las celdas del DataGrid -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFC4DCF4"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para las filas del DataGrid -->
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="24"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFC4DCF4"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F3F3F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <StackPanel Orientation="Vertical">

            <!-- BORDER: Datos de la Actividad -->
            <Border Style="{StaticResource Border}"
                    Margin="0,0,0,12">

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Datos de la Actividad" 
                               Style="{StaticResource SectionTitle}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <!-- Nombre Actividad -->
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🏃" 
                                       Grid.Column="0"
                                       Style="{StaticResource TextBoxIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBox x:Name="txtNombreActividad" 
                                     Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="100"/>
                        </Grid>

                        <!-- Aforo -->
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="👥" 
                                       Grid.Column="0"
                                       Style="{StaticResource TextBoxIcon}"
                                       FontSize="18"
                                       Margin="0,-3,8,0"/>
                            <TextBox x:Name="txtAforo" 
                                     Text="{Binding AforoMaximo, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1"
                                     Style="{StaticResource InputTextBox}"/>
                        </Grid>
                    </Grid>

                    <!-- Mensaje de Error (se muestra solo si HasError es true) -->
                    <Border Background="#FFFFE0E0" 
                            BorderBrush="#FFFF6B6B" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="8,6"
                            Margin="0,10,0,0"
                            Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="#FFD32F2F" 
                                   FontSize="12" 
                                   TextWrapping="Wrap"/>
                    </Border>

                    <!-- Botones de acción -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,15,0,2">
                        <Button Content="Nuevo" 
                                Command="{Binding NuevoCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#6AAE6A"
                                Margin="0,0,10,0"/>

                        <Button Content="Editar" 
                                Command="{Binding EditarCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#FF5B9BD4"
                                Margin="0,0,10,0"/>

                        <Button Content="Eliminar" 
                                Command="{Binding EliminarCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#E56A5C"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- BORDER: DataGrid -->
            <Border Style="{StaticResource Border}">

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Lista de Actividades" 
                               Style="{StaticResource SectionTitle}"/>

                    <!-- DataGrid -->
                    <DataGrid x:Name="dgViajes"
                              ItemsSource="{Binding Actividades}"
                              SelectedItem="{Binding ActividadSeleccionada}"
                              AutoGenerateColumns="False"
                              Height="337"
                              IsReadOnly="True"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              Background="White"
                              BorderBrush="#FFC0D2E3"
                              BorderThickness="1"
                              RowStyle="{StaticResource DataGridRowStyle}"
                              CellStyle="{StaticResource DataGridCellStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdActividad}" Width="55"/>
                            <DataGridTextColumn Header="Nombre de Actividad" Binding="{Binding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Aforo max." Binding="{Binding AforoMaximo}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Total -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Total de Actividades:" 
                                   Style="{StaticResource TotalLabel}"
                                   Margin="2,6,0,0"/>

                        <TextBlock x:Name="txtTotalActividades"
                                   Text="{Binding TotalActividades}" 
                                   Style="{StaticResource TotalLabel}"
                                   Margin="6,6,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>
