<Window x:Class="CentroDeportivo.Windows.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentroDeportivo.Windows"
        mc:Ignorable="d"
        Title="Nueva Reserva"
        Width="420"
        Height="328"
		Background="#FFF0F0F0"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Estilo para el icono del campo -->
        <Style x:Key="FieldIcon" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1E3A52"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para el placeholder -->
        <Style x:Key="PlaceholderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="9,5,0,0"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>

        <!-- Estilo para el ComboBox -->
        <Style x:Key="InputComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para el DatePicker -->
        <Style x:Key="InputDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para el botón de acción -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="33"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="baseBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}"/>
                            <Border x:Name="overlayBorder"
                                    Background="Transparent"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                TextBlock.Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.07"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.14"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER  -->
        <Border Grid.Row="0"
                Background="#1E3A52"
				Padding="10"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1">

            <TextBlock Text="Crear Reserva"
                       Foreground="White"
                       FontSize="21"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- CONTENIDO -->
        <Grid Grid.Row="1"
              Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- DATOS DE LA RESERVA -->
            <Border Grid.Row="0"
                    Background="#FFE7EFF6"
                    CornerRadius="11"
                    Padding="16,11,16,16"
                    BorderBrush="#FFC0D2E3"
                    BorderThickness="1">

                <StackPanel>
                    <!-- Título de sección -->
                    <TextBlock Text="Datos de la Reserva"
                               FontSize="12"
                               Foreground="#7A7A7A"
                               Margin="2,0,0,8"/>

                    <!-- Socio -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="👤"
                                   Grid.Column="0"
                                   Style="{StaticResource FieldIcon}"
                                   FontSize="16"
                                   Margin="2,0,8,0"/>
                        <Grid Grid.Column="1">
                            <ComboBox x:Name="cbSocio"
                                      Style="{StaticResource InputComboBox}"
                                      IsEditable="True"
                                      IsTextSearchEnabled="False"
                                      DisplayMemberPath="Nombre"
                                      SelectedValuePath="IdSocio"
                                      PreviewMouseDown="CbSocio_PreviewMouseDown"
                                      KeyUp="CbSocio_KeyUp"
                                      GotFocus="CbSocio_GotFocus"
                                      LostFocus="CbSocio_LostFocus"/>
                            <TextBlock x:Name="placeholderSocio"
                                       Text="Selecciona un socio"
                                       Style="{StaticResource PlaceholderText}"/>
                        </Grid>
                    </Grid>

                    <!-- Actividad -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="✈️"
                                   Grid.Column="0"
                                   Style="{StaticResource FieldIcon}"
                                   FontSize="16"
                                   Margin="2,0,8,0"/>
                        <Grid Grid.Column="1">
                            <ComboBox x:Name="cbActividad"
                                      Style="{StaticResource InputComboBox}"
                                      IsEditable="True"
                                      IsTextSearchEnabled="False"
                                      DisplayMemberPath="Nombre"
                                      SelectedValuePath="IdActividad"
                                      PreviewMouseDown="CbActividad_PreviewMouseDown"
                                      KeyUp="CbActividad_KeyUp"
                                      GotFocus="CbActividad_GotFocus"
                                      LostFocus="CbActividad_LostFocus"/>
                            <TextBlock x:Name="placeholderActividad"
                                       Text="Selecciona una actividad"
                                       Style="{StaticResource PlaceholderText}"/>
                        </Grid>
                    </Grid>

                    <!-- Fecha -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="📅"
                                   Grid.Column="0"
                                   Style="{StaticResource FieldIcon}"
                                   FontSize="16"
                                   Margin="2,0,8,0"/>
                        <DatePicker x:Name="dpFechaReserva"
                                    Grid.Column="1"
                                    Style="{StaticResource InputDatePicker}"/>
                    </Grid>

                    <!-- Botones de acción -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,5,0,0">
                        <Button Content="Crear"
                                Style="{StaticResource ActionButton}"
                                Background="#6AAE6A"
                                Margin="0,0,10,0"
                                Click="BtnCrear_Click"/>

                        <Button Content="Atrás"
                                Style="{StaticResource ActionButton}"
                                Background="#F5C469"
                                Click="BtnAtras_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
