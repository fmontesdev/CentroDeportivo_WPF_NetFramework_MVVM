<Window x:Class="CentroDeportivo.Windows.NuevoSocioWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:CentroDeportivo.Windows"
      xmlns:converters="clr-namespace:CentroDeportivo.Converters"
      xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
      mc:Ignorable="d"
      Title="Nuevo Socio"
      Width="420"
      Height="340"
      Background="#FFF0F0F0"
      WindowStartupLocation="CenterScreen"
      ResizeMode="NoResize">

  <Window.Resources>
      <!-- Converter para el placeholder (vacío = visible, con texto = oculto) -->
      <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        
        <!-- Converter nativo para bool a visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Estilo para el icono del TextBox -->
        <Style x:Key="TextBoxIcon" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1E3A52"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para el placeholder -->
        <Style x:Key="PlaceholderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="9,5,0,0"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>

        <!-- Estilo para el TextBox -->
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para el botón de acción -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="33"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Capa base con el color del botón -->
                            <Border x:Name="baseBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}"/>

                            <!-- Capa de overlay para efectos hover/pressed -->
                            <Border x:Name="overlayBorder"
                                    Background="Transparent"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                TextBlock.Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.07"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Presionado -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.14"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER  -->
        <Border Grid.Row="0"
                Background="#1E3A52"
				Padding="10"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1">

            <TextBlock Text="Crear Socio"
                       Foreground="White"
                       FontSize="21"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- CONTENIDO -->
        <Grid Grid.Row="1"
              Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- DATOS DEL SOCIO -->
            <Border Grid.Row="0"
                    Background="#FFE7EFF6"
                    CornerRadius="11"
                    Padding="16,11,16,16"
                    BorderBrush="#FFC0D2E3"
                    BorderThickness="1">

                <StackPanel>
                    <!-- Título de sección -->
                    <TextBlock Text="Datos del Socio"
                               FontSize="12"
                               Foreground="#7A7A7A"
                               Margin="2,0,0,8"/>

                    <!-- Nombre -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="👤"
                                   Grid.Column="0"
                                   Style="{StaticResource TextBoxIcon}"
                                   FontSize="16"
                                   Margin="2,0,8,0"/>

                        <Grid Grid.Column="1">
                            <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="30"/>
                            <TextBlock Text="Nombre"
                                       Style="{StaticResource PlaceholderText}"
                                       Visibility="{Binding Nombre, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>

                    <!-- Email -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="✉"
                                   Grid.Column="0"
                                   Style="{StaticResource TextBoxIcon}"
                                   FontSize="16"
                                   Margin="0,0,9,0"/>

                        <Grid Grid.Column="1">
                            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="100"/>
                            <TextBlock Text="Email"
                                       Style="{StaticResource PlaceholderText}"
                                       Visibility="{Binding Email, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>

                    <!-- Mensaje de Error (se muestra solo si HasError es true) -->
                    <Border Background="#FFFFE0E0" 
                            BorderBrush="#FFFF6B6B" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="8,6"
                            Margin="0,0,0,10"
                            Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="#FFD32F2F" 
                                   FontSize="12" 
                                   TextWrapping="Wrap"/>
                    </Border>

                    <!-- Botones de acción -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,5,0,0">
                        <Button Content="Crear"
                                Command="{Binding CrearCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#6AAE6A"
                                Margin="0,0,10,0"/>

                        <Button Content="Cancelar"
                                Command="{Binding CancelarCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#F5C469"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
